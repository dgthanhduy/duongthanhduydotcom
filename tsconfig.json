{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "react": ["./node_modules/@types/react"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "lib/lunr-languages/lunr.vi.js",
        "lib/lunr-languages/lunr.stemmer.support.js",
        "lib/lunr-languages/lunr.multi.js"
    ],
    "exclude": ["node_modules"]
}
